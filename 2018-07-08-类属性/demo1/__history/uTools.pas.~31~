unit uTools;

interface
 {声明区域}

uses
    Unit1;

type
    TPerson = class
        {字段、域}
    private
        FName: string;
        FAge: Integer;
        //声明一个函数,用于获取字段的值
        function GetAge(): Integer;
    public
        {属性:property}
        property Name: string read FName write FName;
        property Age: string read GetAge write FName;
    end;

implementation
  {实现区域}

{ TPerson }

function TPerson.GetAge: Integer;
begin

    Result := Self.FAge;
end;

initialization
 {初始化区域}



finalization
 {销毁区域}

end.

