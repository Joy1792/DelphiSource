program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
    System.SysUtils;

{*------------------------------------------------------------------------------
  什么是异常


  异常怎么使用




-------------------------------------------------------------------------------}
type
    EMathException = class(Exception)
    end;

procedure MyDivFun(Num1, Num2: Integer);
begin
    if (Num2 = 0) then begin
        //我们抛出一个异常
        raise EMathException.Create('除数不能为0');

    end;
    Writeln('*****');
end;

begin

    try
        try
            MyDivFun(10, 0);
        except
            on E: EMathException do begin
                Writeln(E.Message + '---');
            end;
            on E: Exception do begin
                Writeln(E.Message);
            end;
        end;
    finally
      //释放资源
    end;

    Readln;
end.

